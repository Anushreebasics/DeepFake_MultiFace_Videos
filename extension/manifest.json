{
    "manifest_version": 3,
    "name": "FakeFree",
    "version": "1.0",
    "description": "DeepFake Detector",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
      }
    ],
    
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    }
  }
  